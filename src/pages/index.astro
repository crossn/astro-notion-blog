---
import Layout from '../layouts/Layout.astro'
import TopTitle from '../components/page/TopTitle.astro'
import About from '../components/page/About.astro'
import ImageCol from '../components/page/ImageCol.astro'
import Contact from '../components/page/Contact.astro'
---

<Layout>
  <div class="container">
    <main>
      <TopTitle />
      <About />
      <ImageCol />
      <Contact />
      <h2>Welcome!</h2>
      <p>Your astro-notion-blog deployed successfully!</p>
      <p>Have fun!</p>
    </main>
  </div>
</Layout>

<style>
  .container {
    max-width: 100%;
    margin: 0 auto;
  }

  .container > main {
    width: 100%;
  }
  .container div:last-child {
    margin-bottom: 0;
  }

  .container h2 {
    margin: 0 0 14px;
    font-size: 1.4rem;
    font-weight: 400;
  }

  .container p {
    margin: 0.3rem auto;
    line-height: 2rem;
  }
</style>
