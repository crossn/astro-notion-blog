---
import { PUBLIC_SITE_TITLE } from '../../server-constants.ts'
import backimage from '/page/tsukurun-zukei.svg'
import styles from '../../styles/page.module.css'
---

<div
  style="text-align: center; background-image: url(../../../page/tsukurun-zukei.svg); background-size: contain;
  background-repeat: no-repeat;
  background-position: center;"
>
  <div class="title">
    <h2>
      {PUBLIC_SITE_TITLE}
    </h2>
    <p>Aesthetic Cocumentarian</p>
  </div>
  <div className={styles.buttonSection}>
    <div className={styles.buttonFlex}>
      <div>
        <span>Work</span>
      </div>
    </div>
  </div>

  <div className={styles.hr}></div>
  <div class="dotLine">
    <span> &nbsp;</span>
    <span>#work</span>
    <span> &nbsp;</span>
  </div>
</div>

<style>
  .title {
    padding: 100px;
  }
  .title > h2 {
    font-size: 3.25em;
    line-height: 1.25;
    font-weight: bold;
  }
  .title > p {
    font-size: 1em;
    line-height: 1.75;
    font-weight: 400;
  }

  .dotLine {
    background-color: rgba(31, 33, 49, 0.3);
    font-size: 0.75rem;
    height: 1.375rem;
    line-height: 1.375rem;
    width: 100%;
    position: relative;
    display: flex;
    padding: 0 0.6rem;
    color: #e6eb2f;
  }
  .dotLine span:nth-child(odd) {
    border-top: dashed 2px;
    height: inherit;
    flex-grow: 1;
    position: relative;
    top: calc(50% - 1px);
  }
  .dotLine span:nth-child(2) {
    padding: 0 0.6rem;
  }
</style>
